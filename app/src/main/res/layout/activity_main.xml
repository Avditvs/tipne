<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Activities.MainActivity"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.souillard.customViews.MenuButton

                android:id="@+id/entrainement"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:minHeight="100dp"
                android:minWidth="100dp"
                app:background_color="@color/light_grey"
                app:corner_radius="20dp"
                app:image_color="@color/white"
                app:margin="10dp"
                app:src="@drawable/speaker"
                app:text="Test \nApprentissage"
                app:textColor="@color/white"
                app:textSize="10dp"

                />


            <com.souillard.customViews.MenuButton

                android:id="@+id/STT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:src="@drawable/speaker"
                app:text="Test STT"
                app:textColor="@color/white"
                app:textSize="10dp"
                app:image_color="@color/white"
                android:minHeight="70dp"
                android:minWidth="70dp"
                app:margin="10dp"
                android:layout_margin="10dp"
                app:background_color="@color/fond_bouton"
                app:corner_radius="5dp"
                android:foreground="?android:attr/selectableItemBackground"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.souillard.customViews.MenuButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:src="@drawable/speaker"
                app:text="Apprentissage \ndes verbes"
                app:textColor="@color/white"
                app:textSize="10dp"
                app:image_color="@color/white"
                android:minHeight="100dp"
                android:minWidth="80dp"
                app:margin="10dp"
                android:id="@+id/bt_verbes"
                android:layout_margin="10dp"
                app:corner_radius="15dp"
                app:background_color="@color/bg_gradient_end"
                android:foreground="?android:attr/selectableItemBackground"

                />

            <com.souillard.customViews.MenuButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:src="@drawable/speaker"
                app:text="Evaluation"
                app:textColor="@color/white"
                app:textSize="10dp"
                app:image_color="@color/white"
                android:minHeight="100dp"
                android:minWidth="80dp"
                app:margin="10dp"
                android:id="@+id/bt_eval"
                android:layout_margin="10dp"
                app:corner_radius="15dp"
                app:background_color="@android:color/holo_red_dark"
                android:foreground="?android:attr/selectableItemBackground"

                />

        </LinearLayout>






    </LinearLayout>

</android.support.constraint.ConstraintLayout>
