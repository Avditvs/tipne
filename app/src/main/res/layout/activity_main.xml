<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Activities.MainActivity"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.souillard.customViews.MenuButton

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:src="@drawable/speaker"
                app:text="Test"
                app:textColor="@color/white"
                app:textSize="20dp"
                app:image_color="@color/white"
                android:minHeight="70dp"
                android:minWidth="70dp"
                app:margin="30dp"
                android:layout_margin="10dp"
                app:background_color="@color/light_grey"
                app:corner_radius="20dp"
                android:id="@+id/button"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"

                />


            <com.souillard.customViews.MenuButton

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:src="@drawable/speaker"
                app:text="Test 2"
                app:textColor="@color/white"
                app:textSize="5dp"
                app:image_color="@color/white"
                android:minHeight="70dp"
                android:minWidth="70dp"
                app:margin="10dp"
                android:layout_margin="10dp"
                app:background_color="@color/fond_bouton"
                app:corner_radius="5dp"
                android:foreground="?android:attr/selectableItemBackground"


                />

        </LinearLayout>


        <com.souillard.customViews.MenuButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:src="@drawable/speaker"
            app:text="Test 4"
            app:textColor="@color/white"
            app:textSize="3dp"
            app:image_color="@color/white"
            android:minHeight="40dp"
            android:minWidth="20dp"
            app:margin="10dp"
            android:layout_margin="10dp"
            app:corner_radius="50dp"
            app:background_color="@color/bg_gradient_end"
            android:foreground="?android:attr/selectableItemBackground"



            />






    </LinearLayout>

</android.support.constraint.ConstraintLayout>
