<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="onScreenClick"
    tools:context="Activities.MainActivity"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/tipne"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:id="@+id/databaseact">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English for professional purposes"
            android:textSize="40dp"
            android:textAlignment="center"
            android:layout_marginVertical="40dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/souillard"
            />

        <TextView
            android:id="@+id/affdb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chargement de la base de donnÃ©es, veuillez patienter"
            android:textAlignment="center"
            android:layout_marginVertical="40dp"
            android:textSize="20dp"/>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Dans le cadre d'un TIPNE"
        android:gravity="center"
        android:id="@+id/tipne"
        />

</android.support.constraint.ConstraintLayout>
